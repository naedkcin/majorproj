extends layout

block content

    div.span12
        table.table.table-bordered.table-striped

            tr
                th Last Name
                th First Name
                th Home Phone
                th Mobile
                th Email
                th Address
                th.muted Action

            each row in people
                tr
                    td #{row.lastname}
                    td #{row.firstname}
                    td #{row.homephone}
                    td #{row.mobile}
                    td #{row.email}
                    td #{row.address}
                    td
                        a(href="/update/#{row._id}")
                            i.icon-pencil
                        a(href="/remove/#{row._id}")
                            i.icon-trash


