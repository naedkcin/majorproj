extends layout

block title

    h1= title

block content

    script.
      $(document).ready(function() {
        $(".active").removeClass("active");
        $("#list").addClass("active");
      });

    div.span12
        table.table.table-bordered.table-striped

            tr
                th Last Name
                th First Name
                th Home Phone
                th Mobile
                //th Email
                th Address

            each row in people
                tr
                    td #{row.lastname}
                    td #{row.firstname}
                    td #{row.homephone}
                    td #{row.mobile}
                    //td #{row.email}
                    td #{row.address.slice(1,row.address.length-1)}

